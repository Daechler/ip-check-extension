{
    "manifest_version": 2,
    "name": "IP Check",
    "version": "1.0",
    "description": "Changes icon color based on current public IP address.",
    "permissions": [
        "https://daechler.net/ip/",
        "storage",
        "alarms"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icons/red.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "64": "icons/green.png"
    }
}
